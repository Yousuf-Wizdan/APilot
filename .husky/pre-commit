# .husky/pre-commit

. "$(dirname "$0")/_/husky.sh"

echo "⚡🚀 Checking your code before commit... ⚡🚀"

# Check Prettier standards
pnpm run check-format || (
    echo "🛠️📦 Prettier check failed! Run 'pnpm run format', stage changes, and try committing again."
    exit 1
)

# Check ESLint standards
pnpm run lint || (
    echo "⚡💥 ESLint check failed! Fix the issues above, stage changes, and try committing again."
    exit 1
)

# Check TypeScript types
pnpm run check-types || (
    echo "📐📝 TypeScript type check failed! Fix the type errors above before committing."
    exit 1
)

echo "✅🚀 All checks passed! Ready to commit! ✅🚀"
